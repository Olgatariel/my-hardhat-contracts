pragma solidity ^0.8.20;

contract SimpleCounter {
    mapping(address => uint) public numbers;
    error NegativeResult();

    function saveNumber(uint _number) public {
        numbers[msg.sender] = _number;
    }
    function minusNumber(uint _number) public {
        if (numbers[msg.sender] < _number) revert NegativeResult();
        numbers[msg.sender] -= _number;
    }
}

pragma solidity ^0.8.20;

contract SimpleNotes {
    mapping(address => string) public notes;
    error NoteAlreadyExist();

    event NoteSaved(address indexed user, string note, uint timestamp);

    function saveNote(string memory _myNote) public {
        if (bytes(notes[msg.sender]).length != 0) revert NoteAlreadyExist();
        notes[msg.sender] = _myNote;
        emit NoteSaved(msg.sender, _myNote, block.timestamp);
    }

    function getNote() public view returns (string memory) {
        return notes[msg.sender];
    }
}
